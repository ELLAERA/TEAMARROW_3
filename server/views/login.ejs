                    </div>
                    <div>
                        <p class="validationError" style="visibility: hidden;" id="validationResult"> </p>
                        <% if(messages.length> 0) { %>
                            <div id="messageArea" class="validationError">
                                <%= messages %>
                            </div>
                            <% } %>
                                <p class="validationSuccess" style="visibility: hidden;" id="successResult"> </p>
                    </div>


                    <div class="submission">
                        <div>
                            <button type="submit" id="btnlogin">Login</button>
                            <!-- <button type="submit" class="btn-login" id="submit">Register</button> -->

                        </div>
                        <div>
                            <button id="btnClear">Clear</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>


