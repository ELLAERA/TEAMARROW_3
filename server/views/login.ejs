<%- include partials/header.ejs %>

    <div class="container1">

        <!-- begin section availability  -->
        <section id="login" class="section-gray" style="background-color:#ced4da;">

            <div class="form-container" id="loginuser">
                <div class="header">
                    <h2>User Login</h2>
                </div>
                <form class="form" id="loginForm" novalidate method="POST">

                    <div class="form-control">
                        <label>Username</label>
                        <input type="text" placeholder="username" id="username" name="username">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div class="form-control">
                        <label>Password</label>
                        <input type="password" placeholder="Password" name="password" id="password">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div>
                        <p class="validationError" style="visibility: hidden;" id="validationResult"> </p>
                        <% if(messages.length> 0) { %>
                            <div id="messageArea" class="validationError">
                                <%= messages %>
                            </div>
                            <% } %>
                                <p class="validationSuccess" style="visibility: hidden;" id="successResult"> </p>
                    </div>


                    <div class="submission">
                        <div>
                            <button type="submit" id="btnlogin">Login</button>
                            <!-- <button type="submit" class="btn-login" id="submit">Register</button> -->

                        </div>
                        <div>
                            <button id="btnClear">Clear</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>


    <script type="text/javascript" src="/Scripts/loginuser.js"></script>

    <%- include partials/footer.ejs %>