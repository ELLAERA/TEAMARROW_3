<%- include partials/header.ejs %>
    <div class="container1">

        <!-- begin section availability  -->
        <section id="register" class="section-gray" style="background-color:#ced4da;">

            <div class="form-container" id="memberRegistration">
                <div class="header">
                    <h2>User Registration</h2>
                </div>
                <form class="form" id="registerForm" novalidate method="POST">

                    <div class="form-control">
                        <label>username</label>
                        <input type="text" placeholder="username" id="username" name="username">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div class="form-control">
                        <label>Password</label>
                        <input type="password" placeholder="Password" name="password" id="password">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div class="form-control">
                        <label>Confirm Password</label>
                        <input type="password" placeholder="Repeat password" id="password2" name="password2">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div class="form-control">
                        <label>First name</label>
                        <input type="text" placeholder="firstname" id="firstname" name="firstname">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div class="form-control">
                        <label>Last name</label>
                        <input type="text" placeholder="lastname" id="lastname" name="lastname">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div class="form-control">
                        <label>Email</label>
                        <input type="email" placeholder="hello@email.com" id="email" name="email">
                        <i class="fa fa-check-circle"></i>
                        <i class="fa fa-exclamation-circle"></i>
                        <small>Error message</small>
                    </div>
                    <div>
                        <p class="validationError" style="visibility: hidden;" id="validationResult"> </p>
                        <% if(messages.length> 0) { %>
                            <div id="messageArea" class="validationError">
                                <%= messages %>
                            </div>
                            <% } %>
                                <p class="validationSuccess" style="visibility: hidden;" id="successResult"> </p>
                    </div>

                    <div class="submission">
                        <div>
                            <button type="submit" id="btnRegisterAccount">Register Account</button>
                            <!-- <button type="submit" class="btn-login" id="submit">Register</button> -->

                        </div>
                        <div>
                            <button id="btnClear">Clear</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>


    <script type="text/javascript" src="/Scripts/createaccount.js"></script>

    <%- include partials/footer.ejs %>